<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.coderx.assignment02">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ImageDisplayActivity"></activity>
        <activity android:name=".SelectedRatingViewActivity"
            android:configChanges="orientation|screenSize"
            android:label="IMDB Ratings"/>
        <activity android:name=".EditSelectedActivity"
            android:configChanges="orientation|screenSize"
            android:label="Change the values of Movie"/>
        <activity android:name=".MainActivity"
            android:configChanges="orientation|screenSize"/>
        <activity android:name=".RatingActivity"
            android:configChanges="orientation|screenSize"
            android:label="Movies"/>
        <activity android:name=".SearchActivity"
            android:configChanges="orientation|screenSize"
            android:label="Search"/>
        <activity android:name=".EditMovieActivity"
            android:configChanges="orientation|screenSize"
            android:label="Movies"/>
        <activity android:name=".FavouriteActivity"
            android:configChanges="orientation|screenSize"
            android:label="Favourite Movies"/>
        <activity android:name=".DisplayMoviesActivity"
            android:configChanges="orientation|screenSize"
            android:label="All Movies"/>
        <activity android:name=".RegMovieActivity"
            android:configChanges="orientation|screenSize"
            android:label="Enter Movie Details"/>
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>