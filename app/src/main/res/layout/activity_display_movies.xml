<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayMoviesActivity"
    android:background="@drawable/portrait_bg">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/movieRecView"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_margin="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnFav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_favorite_black_24dp"
        android:drawablePadding="6dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/add_to_favourites"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:background="@color/lightBlue"
        android:textColor="#fff"
        android:padding="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/movieRecView" />
</androidx.constraintlayout.widget.ConstraintLayout>